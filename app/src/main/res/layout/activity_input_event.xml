<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputEvent">

    <EditText
        android:id="@+id/etaddeventname"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="54dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Nama Event"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tvshowaddeventdesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvshowaddeventname" />

    <TextView
        android:id="@+id/tvshowaddeventname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="19dp"
        android:text="Nama Event :"
        app:layout_constraintBottom_toTopOf="@+id/etaddeventname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etaddeventdesc"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_marginTop="280dp"
        android:layout_marginBottom="194dp"
        android:background="@android:color/white"
        android:ems="10"
        android:hint="Deskripsi"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvshowaddeventname" />

    <TextView
        android:id="@+id/tvshowaddeventdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="298dp"
        android:layout_marginBottom="100dp"
        android:text="Deskripsi :"
        app:layout_constraintBottom_toTopOf="@+id/etaddeventdesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etaddeventname" />

    <Button
        android:id="@+id/buttoninsert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="90dp"
        android:text="Insert"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etaddeventdesc" />
</androidx.constraintlayout.widget.ConstraintLayout>