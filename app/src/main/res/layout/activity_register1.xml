<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".Register1">

    <TextView
        android:id="@+id/tvJudulRegister"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/holo_orange_dark"
        android:fontFamily="@font/lemon"
        android:paddingTop="30dp"
        android:text="REGISTER"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Spinner
        android:id="@+id/spDaerahAsal"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gender"
        app:layout_constraintVertical_bias="0.006" />

    <EditText
        android:id="@+id/etNama"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Nama"
        android:inputType="textPersonName"
        android:paddingLeft="40dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jenisuser"
        app:layout_constraintVertical_bias="0.014" />

    <Spinner
        android:id="@+id/spUmur"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNama"
        app:layout_constraintVertical_bias="0.025" />

    <Button
        android:id="@+id/btnNextPage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:onClick="toRegister2"
        android:text="Next"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934" />

    <ImageView
        android:id="@+id/ivtoko"
        android:layout_width="40dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/spUmur"
        app:layout_constraintEnd_toEndOf="@+id/spUmur"
        app:layout_constraintHorizontal_bias="0.985"
        app:layout_constraintStart_toStartOf="@+id/spUmur"
        app:layout_constraintTop_toTopOf="@+id/spUmur"
        app:layout_constraintVertical_bias="0.458"
        app:srcCompat="@drawable/downpoint" />

    <ImageView
        android:id="@+id/ivpemilik"
        android:layout_width="40dp"
        android:layout_height="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/spDaerahAsal"
        app:layout_constraintEnd_toEndOf="@+id/spDaerahAsal"
        app:layout_constraintHorizontal_bias="0.992"
        app:layout_constraintStart_toStartOf="@+id/spDaerahAsal"
        app:layout_constraintTop_toTopOf="@+id/spDaerahAsal"
        app:layout_constraintVertical_bias="0.52"
        app:srcCompat="@drawable/downpoint" />

    <RadioGroup
        android:id="@+id/jenisuser"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvJudulRegister"
        app:layout_constraintVertical_bias="0.063">

        <RadioButton
            android:id="@+id/rbToko"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:onClick="pilihtoko"
            android:paddingRight="10dp"
            android:text="Toko"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbUser"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:onClick="pilihuser"
            android:text="User"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="111dp" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/gender"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spUmur"
        app:layout_constraintVertical_bias="0.04">

        <RadioButton
            android:id="@+id/rbPria"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:text="Pria"
            android:textColorHighlight="#FFFFFF"
            android:textColorLink="#FFFFFF"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbWanita"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:text="Wanita"
            android:textSize="16sp" />
    </RadioGroup>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/etNama"
        app:layout_constraintStart_toStartOf="@+id/etNama"
        app:layout_constraintTop_toTopOf="@+id/etNama"
        app:layout_constraintVertical_bias="0.529"
        app:srcCompat="@drawable/baseline_person_black_18dp" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/spDaerahAsal"
        app:layout_constraintStart_toStartOf="@+id/spDaerahAsal"
        app:layout_constraintTop_toTopOf="@+id/spDaerahAsal"
        app:layout_constraintVertical_bias="0.619"
        app:srcCompat="@drawable/baseline_explore_black_18dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/spUmur"
        app:layout_constraintStart_toStartOf="@+id/spUmur"
        app:layout_constraintTop_toTopOf="@+id/spUmur"
        app:srcCompat="@drawable/baseline_calendar_today_black_18dp" />

</androidx.constraintlayout.widget.ConstraintLayout>