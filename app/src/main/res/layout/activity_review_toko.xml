<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view_products">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp">


        <ImageView
            android:id="@+id/ivupic"
            android:layout_width="75dp"
            android:layout_height="79dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="9dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/ivupic"
            android:text="Nama User"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/tvureview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvurate"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/ivupic"
            android:text="Review User"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvurate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvuname"
            android:layout_marginStart="26dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/ivupic"
            android:text="Rating" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>