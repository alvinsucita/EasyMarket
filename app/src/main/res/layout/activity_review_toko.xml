<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#BAFF4007"
    app:cardBackgroundColor="#BAFF4007">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp">


        <ImageView
            android:id="@+id/ivupic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.09"
            app:srcCompat="@android:color/white" />

        <TextView
            android:id="@+id/tvuname"
            android:layout_width="93dp"
            android:layout_height="29dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/ivupic"
            android:background="@android:color/white"
            android:text="sumoBo"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <TextView
            android:id="@+id/tvureview"
            android:layout_width="141dp"
            android:layout_height="38dp"
            android:layout_below="@+id/tvurate"
            android:layout_marginStart="18dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@+id/ivupic"
            android:background="@android:color/white"
            android:text="Mantap Gan!"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/tvurate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvuname"
            android:layout_marginStart="26dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/ivupic"
            android:text="Rating" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>