<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tvJudulEditProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1F1"
    tools:context=".EditProfileActivity">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/black"
        android:fontFamily="@font/cabin"
        android:text="Edit User"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgKTP"
        android:layout_width="196dp"
        android:layout_height="152dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView32"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/etPassLama"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:hint="Password Lama"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPassLama" />

    <EditText
        android:id="@+id/tvPasswordBaruEditProfile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:hint="Password Baru"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="@+id/tvPassBaru"
        app:layout_constraintTop_toBottomOf="@+id/tvPassBaru" />

    <EditText
        android:id="@+id/tvConfirmPasswordBaruEditProfile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:fontFamily="@font/cabin"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintStart_toStartOf="@+id/textView31"
        app:layout_constraintTop_toBottomOf="@+id/textView31" />

    <Button
        android:id="@+id/btnUpdateEditProfile"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/cabin"
        android:text="Simpan"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConfirmPasswordBaruEditProfile" />

    <TextView
        android:id="@+id/tvPassLama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cabin"
        android:text="Password Lama"
        app:layout_constraintStart_toStartOf="@+id/etPassLama"
        app:layout_constraintTop_toBottomOf="@+id/imgKTP" />

    <TextView
        android:id="@+id/tvPassBaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cabin"
        android:text="Password Baru"
        app:layout_constraintStart_toStartOf="@+id/etPassLama"
        app:layout_constraintTop_toBottomOf="@+id/etPassLama" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/cabin"
        android:text="Confirm Password"
        app:layout_constraintStart_toStartOf="@+id/tvPasswordBaruEditProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvPasswordBaruEditProfile" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Foto KTP"
        app:layout_constraintEnd_toEndOf="@+id/imgKTP"
        app:layout_constraintStart_toStartOf="@+id/imgKTP"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

</androidx.constraintlayout.widget.ConstraintLayout>