<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivGaris4"
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@android:color/black" />

    <ImageView
        android:id="@+id/ivbarangmenunggu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/white" />

    <TextView
        android:id="@+id/tvnamabarangmenunggu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/cabin"
        android:text="Nama"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivbarangmenunggu"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvjumlahbarangmenunggu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/cabin"
        android:text="Jumlah"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/tvnamabarangmenunggu"
        app:layout_constraintStart_toStartOf="@+id/tvnamabarangmenunggu"
        app:layout_constraintTop_toBottomOf="@+id/tvnamabarangmenunggu" />

    <TextView
        android:id="@+id/tvtotalbarangmenunggu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/cabin"
        android:text="Total harga"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ivGaris4"
        app:layout_constraintEnd_toEndOf="@+id/tvjumlahbarangmenunggu"
        app:layout_constraintStart_toStartOf="@+id/tvjumlahbarangmenunggu"
        app:layout_constraintTop_toBottomOf="@+id/tvjumlahbarangmenunggu" />
</androidx.constraintlayout.widget.ConstraintLayout>